<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="xyz.manzodev.thecoffeehouse.order.ProductDetailViewModel" />
        <import type="android.view.View"></import>
        <import type="xyz.manzodev.thecoffeehouse.utils.Font"></import>
        <import type="xyz.manzodev.thecoffeehouse.utils.StringUtils"></import>
    </data>

    <FrameLayout
        tools:context=".order.ProductDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="36dp">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:id="@+id/layout_order_process"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/colorDisabled"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>
                    <TextView
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="16dp"
                        android:layout_centerVertical="true"
                        android:textSize="36sp"
                        setFont="@{Font.ICON}"
                        android:onClick="@{()->viewmodel.decreaseQuantity()}"
                        android:id="@+id/btn_decrease"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        setFont="@{Font.BOLD}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_centerInParent="true"
                        android:text="@{Integer.toString(viewmodel.quantity)}"
                        android:id="@+id/tv_quantity"
                        android:layout_toRightOf="@id/btn_decrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        setFont="@{Font.ICON}"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="8dp"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"
                        android:layout_centerVertical="true"
                        android:textSize="36sp"
                        android:onClick="@{()->viewmodel.increaseQuantity()}"
                        android:layout_toRightOf="@id/tv_quantity"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                    <FrameLayout
                        android:layout_margin="12dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:background="@drawable/bg_curved_primary"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            setFont="@{Font.REGULAR}"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="@{!viewmodel.removeButtonVisible ? View.VISIBLE : View.GONE}"
                            android:id="@+id/btn_add"
                            android:layout_gravity="right"
                            android:onClick="@{()->viewmodel.addProduct()}"
                            android:text="@{StringUtils.formatPrice(viewmodel.price)}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            setFont="@{Font.REGULAR}"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="@{viewmodel.removeButtonVisible ? View.VISIBLE : View.GONE}"
                            android:id="@+id/btn_remove"
                            android:onClick="@{()->viewmodel.removeProduct()}"
                            android:layout_gravity="right"
                            android:text="Remove"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </FrameLayout>
                </RelativeLayout>
                <ScrollView
                    android:layout_alignParentTop="true"
                    android:background="@color/colorBackground"
                    android:layout_above="@id/layout_order_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/colorBackground"
                        android:layout_above="@id/layout_order_process"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_margin="12dp"
                                android:id="@+id/iv_product"
                                android:elevation="0dp"
                                app:cardCornerRadius="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    setImageUrl="@{viewmodel.product.imgUrl}"
                                    android:src="@color/colorPrimary"
                                    android:layout_width="66dp"
                                    android:layout_height="66dp"></ImageView>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                setFont="@{Font.SEMIBOLD}"
                                android:textSize="16sp"
                                android:id="@+id/tv_product_name"
                                android:layout_alignTop="@id/iv_product"
                                android:layout_toRightOf="@id/iv_product"
                                android:textColor="@color/black"
                                android:text="@{viewmodel.product.name}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                setFont="@{Font.SEMIBOLD}"
                                android:textSize="16sp"
                                android:layout_marginTop="4dp"
                                android:layout_below="@id/tv_product_name"
                                android:layout_alignLeft="@id/tv_product_name"
                                android:textColor="@color/black"
                                android:text="@{StringUtils.formatPrice(viewmodel.price)}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></TextView>
                        </RelativeLayout>

                        <TextView
                            android:padding="12dp"
                            android:textColor="@color/black"
                            setFont="@{Font.SEMIBOLD}"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorDisabled"></View>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorDisabled"></View>
                        <TextView
                            android:padding="12dp"
                            android:textColor="@color/black"
                            setFont="@{Font.SEMIBOLD}"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Topping" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_topping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorDisabled"></View>
                        <TextView
                            android:text="Description"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            setFont="@{Font.SEMIBOLD}"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></TextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/colorDisabled"></View>
                        <TextView
                            android:background="@drawable/bg_underline"
                            setFont="@{Font.REGULAR}"
                            android:textSize="14sp"
                            android:padding="12dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>


                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>