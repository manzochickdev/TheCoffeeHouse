<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="store"
            type="xyz.manzodev.thecoffeehouse.store.model.Store" />
        <import type="xyz.manzodev.thecoffeehouse.utils.Font"></import>
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".store.StoreDetailFragment">
        <ScrollView
            android:layout_below="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    setImageUrl="@{store.img}"
                    android:id="@+id/iv_store"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"></ImageView>

                <FrameLayout
                    android:paddingTop="24dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        map:cameraZoom="17"
                        map:mapType="normal"
                        map:liteMode="true"
                        map:uiMapToolbar="false"/>
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_location"
                        android:layout_width="@dimen/icon"
                        android:layout_height="@dimen/icon"></ImageView>
                    <TextView
                        android:layout_marginLeft="16dp"
                        setFont="@{Font.SEMIBOLD}"
                        android:textColor="@color/black"
                        android:text="@{store.address}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackground"></View>
                <TextView
                    android:layout_margin="16dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    setFont="@{Font.SEMIBOLD}"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bg_curved_border_primary"
                    android:layout_marginTop="1dp"
                    android:text="Get direction"
                    android:id="@+id/btn_direction"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textSize="16sp"
                    setFont="@{Font.SEMIBOLD}"
                    android:textColor="@color/black"
                    android:background="#f2f2f2"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:text="Detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_time"
                        android:layout_margin="16dp"
                        android:tint="@color/colorDisabled"
                        android:src="@drawable/ic_timer"
                        android:layout_width="@dimen/icon"
                        android:layout_height="@dimen/icon"></ImageView>
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ic_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            setFont="@{Font.SEMIBOLD}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="Opening Time : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            setFont="@{Font.SEMIBOLD}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@{store.openingHours}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_tel"
                        android:layout_margin="16dp"
                        android:tint="@color/colorDisabled"
                        android:src="@drawable/ic_timer"
                        android:layout_width="@dimen/icon"
                        android:layout_height="@dimen/icon"></ImageView>
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ic_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            setFont="@{Font.SEMIBOLD}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="Tel : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            setFont="@{Font.SEMIBOLD}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@{store.phone}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_dismiss"
                    android:textSize="20sp"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></ImageView>
                <TextView
                    android:layout_centerInParent="true"
                    setFont="@{Font.SEMIBOLD}"
                    android:textSize="16sp"
                    android:text="@{store.name}"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/btn_dismiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>

</layout>